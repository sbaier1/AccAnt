<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textViewStyle">@style/RobotoTextViewStyle</item>
        <item name="android:buttonStyle">@style/RobotoButtonStyle</item>
        <item name="android:windowBackground">@color/backgroundMedium</item>
        <item name="actionBarStyle">@style/AppTheme.ActionBarTheme</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
    </style>

    <style name="DarkBackground" parent="AppTheme">
        <item name="android:background">@color/backgroundDark</item>
    </style>

    <style name="AppTheme.ActionBarTheme" parent="@style/Widget.AppCompat.ActionBar"></style>

    <style name="AppTheme.TabLayoutTheme" parent="@style/Widget.AppCompat.ActionBar">
        <item name="android:background">@color/backgroundDark</item>
        <item name="android:textAllCaps">false</item>
    </style>


    <style name="AppTheme.Splash">
        <item name="android:windowBackground">@drawable/launch_screen</item>
    </style>

    <style name="RobotoTextViewStyle" parent="android:Widget.TextView">
        <item name="android:fontFamily">@font/roboto_condensed_regular</item>
    </style>

    <style name="CondensedBase" parent="AppTheme">
        <item name="android:fontFamily">sans-serif-condensed</item>
    </style>

    <style name="AppTheme.RobotoCapitalTab" parent="android:Widget.TextView">
        <item name="android:fontFamily">sans-serif-condensed</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="AppTheme.TabTextViewTheme" parent="Widget.MaterialComponents.TabLayout">
        <item name="android:background">@color/backgroundMedium</item>
        <item name="android:fontFamily">@font/roboto_condensed_regular</item>
    </style>

    <style name="RobotoButtonStyle" parent="android:Widget.Holo.Button">
        <item name="android:fontFamily">@font/roboto_condensed_regular</item>
    </style>


    <style name="EczarBase" parent="AppTheme">
        <item name="android:fontFamily">@font/eczar</item>
    </style>


    <style name="Header" parent="CondensedBase">
        <item name="android:letterSpacing">0.05</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textStyle">bold</item>
    </style>


    <style name="Title2" parent="CondensedBase">
        <item name="android:textSize">18sp</item>
        <item name="android:letterSpacing">0.035625</item>
    </style>

    <style name="Subtitle1" parent="CondensedBase">
        <item name="android:textSize">16sp</item>
        <item name="android:letterSpacing">0.035625</item>
    </style>

    <style name="Subtitle2" parent="CondensedBase">
        <item name="android:textSize">14sp</item>
        <item name="android:letterSpacing">0.035</item>
        <item name="android:lineSpacingExtra">4dp</item>
    </style>

    <style name="Subtitle2Bold" parent="Subtitle2">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Subtitle3" parent="CondensedBase">
        <item name="android:textSize">12sp</item>
        <item name="android:letterSpacing">0.035</item>
        <item name="android:lineSpacingExtra">0dp</item>
    </style>

    <style name="Caption" parent="Subtitle2">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="Body1" parent="EczarBase">
        <item name="android:textSize">18sp</item>
        <item name="android:letterSpacing">0.16</item>
    </style>

    <style name="Body2" parent="CondensedBase">
        <item name="android:textSize">14sp</item>
        <item name="android:letterSpacing">0.1875</item>
        <item name="android:fontFamily">sans-serif-condensed-light</item>
    </style>

    <style name="BodyTight" parent="Body2">
        <item name="android:letterSpacing">0.0625</item>
    </style>

    <style name="LightButton" parent="Theme.MaterialComponents.Light">
        <item name="android:textColor">@color/backgroundDark</item>
        <item name="android:background">@color/textColor</item>
    </style>


    <style name="H3Heading" parent="EczarBase">
        <item name="android:letterSpacing">0.0357</item>
        <item name="android:textSize">44sp</item>
        <!--<item name="android:fontWeight">600</item>-->
        <item name="android:textStyle">bold</item>
    </style>

    <style name="FadedH3Heading" parent="H3Heading">
        <item name="android:alpha">0.2</item>
    </style>


    <style name="Button" parent="CondensedBase">
        <item name="android:textSize">14sp</item>
        <item name="android:letterSpacing">0.2</item>
        <item name="android:fontFamily">sans-serif-condensed</item>
        <item name="android:textStyle">bold</item>
        <item name="textAllCaps">true</item>
    </style>

</resources>
